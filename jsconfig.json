{
    "compilerOptions": {
        "jsx": "react",
        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "paths": {
            "@util/*": ["src/js/controller/util/*"],
            "@controller/*": ["src/js/controller/*"],
            "@js/*": ["src/js/*"]
        }
    },
    "exclude": [
        "node_modules/*", "story/*", "dist/*", ".github/*", ".vscode/*", "vendor/*"
    ]
}